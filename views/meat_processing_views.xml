<odoo>
    <data>
       <!-- Vista de Árbol de Órdenes de Procesamiento -->
        <record id="view_meat_processing_order_tree" model="ir.ui.view">
            <field name="name">meat.processing.order.tree</field>
            <field name="model">meat.processing.order</field>
            <field name="arch" type="xml">
                <tree string="Órdenes de Despiece" decoration-bf="state == 'draft'" decoration-info="state == 'processing'" decoration-success="state == 'done'" decoration-danger="state == 'cancelled'">
                    <field name="name" string="Nombre" widget="char"/>
                    <field name="order_date" string="Fecha de Orden"/>
                    <field name="product_ids" string="Productos"/>
                    <field name="total_kilos" string="Kilos Totales" widget="float"/>
                    <field name="processed_kilos" string="Kilos Procesados" widget="float"/>
                    <field name="remaining_kilos" string="Kilos Restantes" widget="float"/>
                    <field name="waste_kilos" string="Desperdicio (kg)" widget="float"/>
                    <field name="state" string="Estado" widget="statusbar" statusbar_visible="draft,processing,done,cancelled"/>
                    <field name="total_amount" string="Monto Total" widget="monetary"/>
                    <field name="notes" string="Notas"/>
                </tree>
            </field>
        </record>

        <!-- Vista de Formulario de Órdenes de Procesamiento -->
        <record id="view_meat_processing_order_form" model="ir.ui.view">
            <field name="name">meat.processing.order.form</field>
            <field name="model">meat.processing.order</field>
            <field name="arch" type="xml">
                <form string="Orden de Despiece">
                    <header>
                        <button string="Confirmar" type="object" name="action_confirm" class="btn-primary o_button_state_draft"/>
                        <button string="Hecho" type="object" name="action_done" class="btn-success o_button_state_processing"/>
                        <button string="Cancelar" type="object" name="action_cancel" class="btn-danger o_button_state_draft o_button_state_processing"/>
                        <button string="Restablecer a Borrador" type="object" name="action_set_to_draft" class="btn-secondary o_button_state_cancelled"/>
                    </header>
                    <sheet>
                        <group>
                            <field name="name" readonly="1" class="o_form_input"/>
                            <field name="order_date" class="o_form_input"/>
                            <field name="product_ids" widget="many2many_tags"/>
                            <field name="location_id" class="o_form_input"/>
                            <field name="total_kilos" required="1" class="o_form_input"/>
                            <field name="processed_kilos" readonly="1" class="o_form_input"/>
                            <field name="remaining_kilos" readonly="1" class="o_form_input"/>
                            <field name="waste_kilos" readonly="1" class="o_form_input"/>
                            <field name="state" readonly="1" class="o_form_input"/>
                            <field name="total_amount" readonly="1" class="o_form_input"/>
                            <field name="notes" class="o_form_input"/>
                        </group>
                        <group>
                            <field name="order_line_ids">
                                <tree string="Líneas de la Orden">
                                    <field name="product_id"/>
                                    <field name="quantity"/>
                                    <field name="used_kilos"/>
                                    <field name="unit_price"/>
                                    <field name="uom_id"/>
                                    <field name="subtotal"/>
                                </tree>
                            </field>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Vista Kanban de Órdenes de Procesamiento -->
            <record id="view_meat_processing_order_kanban" model="ir.ui.view">
            <field name="name">meat.processing.order.kanban</field>
            <field name="model">meat.processing.order</field>
            <field name="arch" type="xml">
                <kanban class="o_meat_processing_kanban" string="Órdenes de Despiece">
                    <templates>
                        <t t-name="kanban-box">
                            <div class="o_kanban_card o_kanban_record">
                                <div class="o_kanban_color_#{record.state}">
                                    <div class="o_kanban_card_header">
                                        <strong><field name="name"/></strong>
                                    </div>
                                    <div class="o_kanban_card_body">
                                        <div>
                                            <span class="fa fa-calendar" aria-hidden="true"></span>
                                            <strong>Fecha de Orden:</strong>
                                            <span class="field-value"><field name="order_date" widget="date" string="Fecha de Orden"/></span>
                                        </div>
                                        <div>
                                            <strong>Productos:</strong>
                                            <span class="field-value"><field name="product_ids" widget="many2many_tags" string="Productos"/></span>
                                        </div>
                                        <div>
                                            <strong>Kilos Totales:</strong>
                                            <span class="field-value"><field name="total_kilos" widget="float" string="Kilos Totales"/></span>
                                        </div>
                                        <div>
                                            <strong>Kilos Procesados:</strong>
                                            <span class="field-value"><field name="processed_kilos" widget="float" string="Kilos Procesados"/></span>
                                        </div>
                                        <div>
                                            <strong>Kilos Restantes:</strong>
                                            <span class="field-value"><field name="remaining_kilos" widget="float" string="Kilos Restantes"/></span>
                                        </div>
                                        <div>
                                            <strong>Desperdicio (kg):</strong>
                                            <span class="field-value"><field name="waste_kilos" widget="float" string="Desperdicio (kg)"/></span>
                                        </div>
                                        <div>
                                            <strong>Monto Total:</strong>
                                            <span class="field-value"><field name="total_amount" widget="monetary" string="Monto Total"/></span>
                                        </div>
                                        <div>
                                            <strong>Estado:</strong>
                                            <span class="field-value"><field name="state" widget="statusbar" statusbar_visible="draft,processing,done,cancelled" string="Estado"/></span>
                                        </div>
                                    </div>
                                    <div class="o_kanban_card_footer">
                                        <strong>Notas:</strong>
                                        <span class="field-value"><field name="notes" widget="text" string="Notas"/></span>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>





        <!-- Vista Calendario de Órdenes de Procesamiento -->
        <record id="view_meat_processing_order_calendar" model="ir.ui.view">
            <field name="name">meat.processing.order.calendar</field>
            <field name="model">meat.processing.order</field>
            <field name="arch" type="xml">
                <calendar string="Órdenes de Despiece" date_start="order_date">
                    <field name="name"/>
                </calendar>
            </field>
        </record>

        <!-- Vista Gráfica de Órdenes de Procesamiento -->
        <record id="view_meat_processing_order_graph" model="ir.ui.view">
            <field name="name">meat.processing.order.graph</field>
            <field name="model">meat.processing.order</field>
            <field name="arch" type="xml">
                <graph string="Órdenes de Despiece" type="bar">
                    <field name="total_amount" string="Monto Total"/>
                    <field name="order_date" interval="month" string="Fecha de la Orden"/>
                </graph>
            </field>
        </record>

        <!-- Vista de Búsqueda de Órdenes de Procesamiento -->
        <record id="view_meat_processing_order_search" model="ir.ui.view">
            <field name="name">meat.processing.order.search</field>
            <field name="model">meat.processing.order</field>
            <field name="arch" type="xml">
                <search string="Buscar Órdenes de Despiece">
                    <field name="name"/>
                    <field name="order_date"/>
                    <field name="state"/>
                    <field name="total_kilos"/>
                    <field name="processed_kilos"/>
                    <field name="remaining_kilos"/>
                    <field name="waste_kilos"/>
                    <field name="total_amount"/>
                </search>
            </field>
        </record>

        <!-- Acción de Ventana para Órdenes de Procesamiento -->
        <record id="action_meat_processing_orders" model="ir.actions.act_window">
            <field name="name">Órdenes de Despiece</field>
            <field name="res_model">meat.processing.order</field>
            <field name="view_mode">tree,form,kanban,calendar,graph</field>
            <field name="view_id" ref="view_meat_processing_order_tree"/>
            <field name="search_view_id" ref="view_meat_processing_order_search"/>
        </record>
    </data>
</odoo>
