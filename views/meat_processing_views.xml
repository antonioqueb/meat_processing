<odoo>
    <data>
        <!-- Vista de Árbol de Órdenes de Procesamiento -->
        <record id="view_meat_processing_order_tree" model="ir.ui.view">
            <field name="name">meat.processing.order.tree</field>
            <field name="model">meat.processing.order</field>
            <field name="arch" type="xml">
                <tree string="Órdenes de Despiece">
                    <field name="name"/>
                    <field name="order_date"/>
                    <field name="product_ids"/>
                    <field name="total_kilos"/>
                    <field name="state"/>
                    <field name="total_amount"/>
                    <field name="notes"/>
                </tree>
            </field>
        </record>

        <!-- Vista de Formulario de Órdenes de Procesamiento -->
        <record id="view_meat_processing_order_form" model="ir.ui.view">
            <field name="name">meat.processing.order.form</field>
            <field name="model">meat.processing.order</field>
            <field name="arch" type="xml">
                <form string="Orden de Despiece">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="order_date"/>
                            <field name="product_ids" widget="many2many_tags"/>
                            <field name="total_kilos"/>
                            <field name="state" readonly="1"/>
                            <field name="total_amount" readonly="1"/>
                            <field name="notes"/>
                        </group>
                        <group>
                            <field name="order_line_ids">
                                <tree string="Líneas de la Orden">
                                    <field name="product_id"/>
                                    <field name="quantity"/>
                                    <field name="unit_price"/>
                                    <field name="uom_id"/>
                                    <field name="subtotal" readonly="1"/>
                                </tree>
                            </field>
                        </group>
                        <footer>
                            <button string="Confirmar" type="object" name="action_confirm" class="oe_highlight" states="draft"/>
                            <button string="Hecho" type="object" name="action_done" class="oe_highlight" states="processing"/>
                            <button string="Cancelar" type="object" name="action_cancel" class="oe_highlight" states="draft,processing"/>
                            <button string="Restablecer a Borrador" type="object" name="action_set_to_draft" class="oe_highlight" states="cancelled"/>
                        </footer>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Vista Kanban de Órdenes de Procesamiento -->
        <record id="view_meat_processing_order_kanban" model="ir.ui.view">
            <field name="name">meat.processing.order.kanban</field>
            <field name="model">meat.processing.order</field>
            <field name="arch" type="xml">
                <kanban string="Órdenes de Despiece">
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_card">
                                <strong>
                                    <field name="name"/>
                                </strong>
                                <div>
                                    <field name="order_date"/>
                                </div>
                                <div>
                                    <field name="total_amount"/>
                                </div>
                                <div>
                                    <field name="total_kilos"/>
                                </div>
                                <div>
                                    <field name="state"/>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <!-- Vista Calendario de Órdenes de Procesamiento -->
        <record id="view_meat_processing_order_calendar" model="ir.ui.view">
            <field name="name">meat.processing.order.calendar</field>
            <field name="model">meat.processing.order</field>
            <field name="arch" type="xml">
                <calendar string="Órdenes de Despiece" date_start="order_date">
                    <field name="name"/>
                </calendar>
            </field>
        </record>

        <!-- Vista Gráfica de Órdenes de Procesamiento -->
        <record id="view_meat_processing_order_graph" model="ir.ui.view">
            <field name="name">meat.processing.order.graph</field>
            <field name="model">meat.processing.order</field>
            <field name="arch" type="xml">
                <graph string="Órdenes de Despiece" type="bar">
                    <field name="total_amount" string="Monto Total"/>
                    <field name="order_date" interval="month" string="Fecha de la Orden"/>
                </graph>
            </field>
        </record>

        <!-- Vista de Búsqueda de Órdenes de Procesamiento -->
        <record id="view_meat_processing_order_search" model="ir.ui.view">
            <field name="name">meat.processing.order.search</field>
            <field name="model">meat.processing.order</field>
            <field name="arch" type="xml">
                <search string="Buscar Órdenes de Despiece">
                    <field name="name"/>
                    <field name="order_date"/>
                    <field name="state"/>
                    <field name="total_kilos"/>
                    <field name="total_amount"/>
                </search>
            </field>
        </record>

        <!-- Acción de Ventana para Órdenes de Procesamiento -->
        <record id="action_meat_processing_orders" model="ir.actions.act_window">
            <field name="name">Órdenes de Despiece</field>
            <field name="res_model">meat.processing.order</field>
            <field name="view_mode">tree,form,kanban,calendar,graph</field>
            <field name="view_id" ref="view_meat_processing_order_tree"/>
            <field name="search_view_id" ref="view_meat_processing_order_search"/>
        </record>
    </data>
</odoo>
