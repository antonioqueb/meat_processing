<odoo>
    <template id="report_meat_processing_order">
        <t t-call="web.basic_layout">
            <div class="page">
                <h2>Meat Processing Order</h2>
                <table class="table table-sm table-hover">
                    <tr>
                        <th>Reference</th>
                        <td><span t-field="o.name"/></td>
                    </tr>
                    <tr>
                        <th>Date</th>
                        <td><span t-field="o.order_date"/></td>
                    </tr>
                    <tr>
                        <th>Customer</th>
                        <td><span t-field="o.customer_id"/></td>
                    </tr>
                    <tr>
                        <th>Status</th>
                        <td><span t-field="o.state"/></td>
                    </tr>
                    <tr>
                        <th>Total Amount</th>
                        <td><span t-field="o.total_amount"/></td>
                    </tr>
                </table>
                <h3>Order Lines</h3>
                <table class="table table-sm table-hover">
                    <thead>
                        <tr>
                            <th>Product</th>
                            <th>Quantity</th>
                            <th>Unit Price</th>
                            <th>Subtotal</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr t-foreach="o.order_line_ids" t-as="line">
                            <td><span t-field="line.product_id"/></td>
                            <td><span t-field="line.quantity"/></td>
                            <td><span t-field="line.unit_price"/></td>
                            <td><span t-field="line.subtotal"/></td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </t>
    </template>
</odoo>
